{
  "id": null,
  "uid": "nginx-load-balancer",
  "title": "Nginx Load Balancer Dashboard",
  "tags": ["nginx", "load-balancer", "infrastructure"],
  "timezone": "",
  "panels": [
    {
      "id": 1,
      "title": "Nginx Request Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never",
            "stacking": {"mode": "none"}
          },
          "unit": "reqps"
        }
      },
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "rate(nginx_http_requests_total[5m])",
          "legendFormat": "Requests/sec",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "Nginx Active Connections",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          },
          "unit": "short"
        }
      },
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "nginx_connections_active",
          "legendFormat": "Active Connections",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "Nginx Connection States",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "fillOpacity": 20,
            "stacking": {"mode": "normal"}
          },
          "unit": "short"
        }
      },
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "nginx_connections_reading",
          "legendFormat": "Reading",
          "refId": "A"
        },
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "nginx_connections_writing",
          "legendFormat": "Writing",
          "refId": "B"
        },
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "nginx_connections_waiting",
          "legendFormat": "Waiting",
          "refId": "C"
        }
      ]
    },
    {
      "id": 4,
      "title": "Nginx Status",
      "type": "stat",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [
            {"options": {"0": {"text": "Down", "color": "red"}}, "type": "value"},
            {"options": {"1": {"text": "Up", "color": "green"}}, "type": "value"}
          ],
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          }
        }
      },
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "nginx_up",
          "legendFormat": "Nginx Status",
          "refId": "A"
        }
      ]
    }
  ],
  "time": {"from": "now-1h", "to": "now"},
  "timepicker": {},
  "refresh": "5s",
  "schemaVersion": 37,
  "version": 0
}
